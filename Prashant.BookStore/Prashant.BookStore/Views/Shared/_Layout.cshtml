<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Book store application</title>
    <link href="~/css/site.css" rel="stylesheet" />

    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.png" width="30" height="30" asp-append-version="true" />
                    Book Store
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="contactus">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="book" asp-action="getallbooks">All Books</a>
                            @*<a class="nav-link" href="/book/getallbooks">All Books</a>*@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="AddNewBook">Add New Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-protocol="https" asp-host="google.com">New Link <small>pass complete url</small></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Copyright  &copy; Book Store @DateTime.Now.Year
        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
    </environment>
    <environment include="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
    </environment>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required:false);

</body>
</html>
